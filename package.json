{
  "name": "adonis-cf-turnstile",
  "version": "0.0.4",
  "description": "Cloudflare turnstile addon for AdonisJS V6",
  "main": "build/index.js",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/types.js",
    "./errors": "./build/errors.js",
    "./services/main": "./build/services/main.js",
    "./services/turnstile": "./build/services/turnstile.js",
    "./middleware/turnstile_middleware": "./build/middleware/turnstile_middleware.js",
    "./providers/turnstile_provider": "./build/providers/turnstile_provider.js"
  },
  "scripts": {
    "build": "npm run compile",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "postcompile": "npm run copy:templates",
    "dev": "tsup-node --watch --onSuccess 'tsc -d && npm run postcompile'",
    "test": "node --loader ts-node/esm --enable-source-maps bin/test.ts",
    "copy:templates": "copyfiles \"stubs/**/**/*.stub\" build"
  },
  "keywords": [
    "adonisjs",
    "adonis6",
    "cloudflare",
    "turnstile"
  ],
  "author": "monojson",
  "license": "MIT",
  "homepage": "https://github.com/monojson/adonis-turnstile",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monojson/adonis-turnstile.git"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.2.3",
    "@adonisjs/core": "^6.3.1",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^2.1.0",
    "@japa/runner": "^3.1.1",
    "@swc/core": "^1.4.6",
    "@types/node": "^20.11.25",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0"
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./configure.ts",
      "./errors.ts",
      "./types.ts",
      "./services/**",
      "./middleware/**",
      "./providers/**"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  },
  "dependencies": {
    "got": "^14.2.1",
    "@poppinss/utils": "^6.7.3"
  }
}
